.content {
  display: flex;
  flex-direction: column;
  max-width: 320px;
  margin: 0px auto 0px auto;
}

/* Основной код для разрешения 320px */
 @media screen and (min-width: calc(282px * 2 + 18px)) {
      /* При ширине в две карточки */
  .content {
    max-width: calc(282px * 2 + 18px); /* Ширина двух карточек */
  }
}

@media screen and (min-width: calc(282px * 3 + 18px)) {
      /* При ширине в три карточки */
  .content {
    max-width: calc(282px * 3 + 18px); /* Ширина трёх карточек */
  }
}